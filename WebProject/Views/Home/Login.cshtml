@model WebProject.ViewModels.Home.LoginVM
@{
    this.Layout = "/Views/Shared/_Site.cshtml";
    ViewData["title"] = "LOGIN";
}

<div class="container-login">
    <div class="form-outer-outer">
        <div class="form-outer">
            <h1>Login</h1>

            <form action="/Home/Login" method="post">

                <div class="form-input">
                    <span class="icon"><i class="fa fa-user-circle-o" aria-hidden="true"></i></span>
                    @Html.TextBoxFor(m => m.Username)
                </div>
                <div class="field-validation-error-div">
                    @Html.ValidationMessageFor(m => m.Username)
                </div>


                <div class="form-input">
                    <span class="icon"><i class="fa fa-user-circle-o" aria-hidden="true"></i></span>
                    @Html.PasswordFor(m => m.Password)

                </div>
                <div class="field-validation-error-div">
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

                <div class="field-validation-error-div">
                    @Html.ValidationMessage("authError")
                </div>

                <div class="login-or-register">
                    <div class="ask-if-member">
                        <p>Not a member? <a href="/Home/Register">Join us!</a></p>
                    </div>
                    <input id="submit-login-btn" type="submit" value="Login" />
                </div>




            </form>
        </div>
    </div>

</div>

